<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/song_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:padding="5dp">

    <TextView
        android:id="@+id/songsTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:longClickable="false"
        android:maxLines="1"
        android:padding="7dp"
        android:text="Title"
        android:textColor="?android:attr/textColor"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/play_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/optionMenuIcon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/optionMenuIcon"
        android:layout_toStartOf="@+id/optionMenuIcon"
        android:clickable="false"
        android:visibility="visible"
        android:contentDescription="optionMenuIcon"
        android:src="@drawable/ic_video_white_18dp"
        android:tint="@color/teal"/>

    <ImageView
        android:id="@+id/optionMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:contentDescription="optionMenuIcon"
        android:src="@drawable/ic_action_overflow"/>
</RelativeLayout>